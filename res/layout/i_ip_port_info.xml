<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="0.5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvIPInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/l_device_ip" />

        <TextView
            android:id="@+id/tvIPField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/l_ip_example"
            android:textSize="20sp" >

            <requestFocus />
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1.5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvPortInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/l_device_port" />

        <TextView
            android:id="@+id/tvPortField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/l_port_example"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>